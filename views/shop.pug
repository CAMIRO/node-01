doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/main.css")
        link(rel="stylesheet", href="/css/product.css")
    body
        header.main-header
            nav.main-header__nav
                ul.main_header__item-list
                    li.main-header__item
                        a.active(href="/") Shop
                    li.main-header__item
                        a.active(href="/admin/add-product") Add Product

        main
            if prods.length > 0
                .grid
                    each product in prods
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            div.card__image
                                img(src="https://images.squarespace-cdn.com/content/v1/53131adfe4b05444a30a6f7b/b45eb28e-5bcf-4e46-8503-a431472550ba/Formatting+links+in+a+book.jpg?format=1000w", alt="a book")
                            div.card__content
                                h2.product__price $ 19.99
                                p.product__description A very interesting book
                            .card__actions
                                button.btn Add to card
            else 
                h1 No Products